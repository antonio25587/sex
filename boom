import time

# Определение функции шагомера
def pedometer():
    # Запрос количества шагов, которые пользователь планирует пройти
    target_steps = int(input("Введите количество шагов, которые вы хотите пройти: "))
    print(f"Ваша цель: {target_steps} шагов.")
    # Начальное количество шагов
    steps = 0
    # Цикл, который выводит на экран количество пройденных шагов и сравнивает его с целевым количеством шагов
    while steps < target_steps:
        steps += 1
        print(f"Вы прошли {steps} шагов.")
        time.sleep(0.5)
    print("Вы достигли своей цели!")

# Запуск шагомера
pedometer()
